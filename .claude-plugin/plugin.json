{
  "$schema": "https://claude.ai/schemas/plugin.json",
  "name": "claude-memory",
  "displayName": "Claude Memory",
  "description": "Persistent memory and codebase indexing for Claude Code. Combines SQLite-backed code analysis with a semantic memory system that learns and remembers across sessions.",
  "version": "1.0.0",
  "author": "Erik Salter",
  "license": "MIT",
  "repository": "https://github.com/an1310/claude-rlm",
  "keywords": [
    "codebase-indexing",
    "code-analysis",
    "memory",
    "context-management",
    "semantic-search",
    "multi-repo",
    "recursive-language-model"
  ],
  "engines": {
    "claude-code": ">=1.0.0"
  },
  "capabilities": {
    "skills": true,
    "agents": true,
    "hooks": true
  },
  "install": {
    "steps": [
      {
        "type": "copy",
        "from": ".claude/skills/rlm",
        "to": ".claude/skills/rlm"
      },
      {
        "type": "copy",
        "from": ".claude/agents/rlm-subcall.md",
        "to": ".claude/agents/rlm-subcall.md"
      },
      {
        "type": "copy",
        "from": ".claude/agents/memory-extractor.md",
        "to": ".claude/agents/memory-extractor.md"
      },
      {
        "type": "merge",
        "from": ".claude/settings.json",
        "to": ".claude/settings.json"
      }
    ],
    "postInstall": "pip install -r requirements.txt || echo 'Optional: Install requirements.txt for semantic search'"
  },
  "configuration": {
    "memory.enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable persistent memory system"
    },
    "memory.maxContextChars": {
      "type": "number",
      "default": 2000,
      "description": "Maximum characters for session context injection"
    },
    "memory.autoCapture": {
      "type": "boolean",
      "default": true,
      "description": "Automatically capture learnings from conversations"
    },
    "embeddings.enabled": {
      "type": "boolean",
      "default": false,
      "description": "Enable semantic search with local embeddings (requires fastembed)"
    },
    "embeddings.model": {
      "type": "string",
      "default": "BAAI/bge-small-en-v1.5",
      "description": "Fastembed model for embeddings"
    }
  },
  "files": [
    ".claude/skills/rlm/SKILL.md",
    ".claude/skills/rlm/scripts/rlm_repl.py",
    ".claude/skills/rlm/scripts/memory_db.py",
    ".claude/skills/rlm/scripts/embeddings.py",
    ".claude/skills/rlm/scripts/session_start.py",
    ".claude/skills/rlm/scripts/session_stop.py",
    ".claude/agents/rlm-subcall.md",
    ".claude/agents/memory-extractor.md",
    ".claude/settings.json",
    "requirements.txt",
    "README.md",
    "test_rlm.py"
  ],
  "dependencies": {
    "python": ">=3.10"
  },
  "optionalDependencies": {
    "fastembed": ">=0.3.0",
    "hnswlib": ">=0.8.0",
    "numpy": ">=1.24.0"
  }
}
